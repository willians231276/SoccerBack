@model Dominio.Team

@{
    ViewBag.Title = "DetailsTeam";
}

<h2>Details Team</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.League.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.League.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Logo)
        </dt>

        <dd>
            @if (Model.Logo != null)
            {
                <img src="@Url.Content(Model.Logo)" alt="Image" style="width:100px;height:150;max-width:100%;min-height:100%" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Initials)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Initials)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit Team", "EditTeam", new { id = Model.TeamId }) |
    @Html.ActionLink("Back to League", $"Details/{Model.LeagueId}")
</p>
